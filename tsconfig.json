{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@shared": [
        "shared/src"
      ],
      "@shared/*": [
        "shared/src/*"
      ],
      "@user/": [
        "apps/user/src/"
      ],
      "@user/*": [
        "apps/user/src/*"
      ],
       "@notification/": [
        "apps/notification/src/"
      ],
      "@notification/*": [
        "apps/notification/src/*"
      ],
    }
  },
  "typeAcquisition": {
    "enable": true
  }
}