{
  "name": "acme-explorer-microservices",
  "version": "1.0.0",
  "description": "<p align=\"center\">   <a href=\"http://nestjs.com/\" target=\"blank\"><img src=\"https://nestjs.com/img/logo_text.svg\" width=\"320\" alt=\"Nest Logo\" /></a> </p>",
  "workspaces": [
    "./apps/*",
    "shared"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"shared/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,shared,test}/**/*.ts\" --fix",
    "lint:prod": "eslint --max-warnings 0 \"{src,apps,shared,test}/**/*.ts\" --fix",
    "test": "jest --forceExit --maxWorkers=4",
    "test:force": "jest --forceExit --maxWorkers=2 --testTimeout=30000",
    "test:watch": "jest --watch --maxWorkers=2",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json "
  },
  "dependencies": {
    "@apollo/gateway": "^0.21.1",
    "@google-cloud/logging-winston": "^4.0.1",
    "@google-cloud/pubsub": "^2.12.0",
    "@nestjs/common": "^7.6.8",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.8.2",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/microservices": "^7.5.1",
    "@nestjs/mongoose": "^9.0.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.0.0",
    "@profusion/apollo-federation-upload": "^2.2.3",
    "@types/dateformat": "^5.0.0",
    "apollo-server-express": "^2.19.0",
    "aws-sdk": "^2.947.0",
    "bcryptjs": "^2.4.3",
    "common": "^0.2.5",
    "country-code-lookup": "0.0.19",
    "express-mongo-sanitize": "^2.1.0",
    "firebase-admin": "^9.5.0",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.1",
    "graphql-type-json": "^0.3.2",
    "graphql-upload": "^11.0.0",
    "http-proxy-middleware": "^2.0.1",
    "joi": "^17.4.2",
    "mongoose": "^6.0.9",
    "ms": "^2.1.3",
    "multer": "^1.4.2",
    "nanoid": "^3.3.3",
    "nodemailer": "^6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.1",
    "slugify": "^1.4.6",
    "uuid": "^8.3.2",
    "validator": "^13.5.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.6.13",
    "@types/express": "^4.17.3",
    "@types/faker": "^5.5.6",
    "@types/jest": "26.0.10",
    "@types/multer": "^1.4.7",
    "@types/node": "^13.9.1",
    "@types/nodemailer": "^6.4.0",
    "@types/passport-jwt": "^3.0.4",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "faker": "^5.5.3",
    "jest": "26.4.2",
    "mongodb-memory-server": "^7.3.6",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.jest.ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/shared/"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@shared/(.*)": "<rootDir>/shared/src/$1",
      "@shared": "<rootDir>/shared/src",
      "@common/common/(.*)": "<rootDir>/shared/src/$1",
      "@common/common": "<rootDir>/shared/src",
      "@user/(.*)": "<rootDir>/apps/user/src/$1",
      "@user/": "<rootDir>/apps/user/src/",
      "@notification/(.*)": "<rootDir>/apps/notification/src/$1",
      "@notification/": "<rootDir>/apps/notification/src/"
    }
  }
}
